import pymysql

#подключаемся к mysql
mydb = pymysql.connect(
              host="localhost",
              user="root",
              passwd="",

            )

mycursor = mydb.cursor()

#создаем базу данных с номером школы, если еще не создана
mycursor.execute("CREATE DATABASE IF NOT EXISTS school_ITSH;")
mydb = pymysql.connect(
              host="localhost",
              user="root",
              passwd="",
              database="school_ITSH"
            )
mycursor = mydb.cursor()
